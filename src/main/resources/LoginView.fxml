        <Label alignment="CENTER" text="Welcome to">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="img/Logo.png" />
         </image>
         <VBox.margin>
            <Insets bottom="28.0" />
         </VBox.margin></ImageView>
        <JFXTextField fx:id="txtEmail" labelFloat="true" maxWidth="-Infinity" prefWidth="300.0" promptText="Email" unFocusColor="#4059a9">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
         <VBox.margin>
            <Insets bottom="35.0" />
         </VBox.margin>
        </JFXTextField>
        <JFXPasswordField fx:id="txtPassword" labelFloat="true" maxWidth="-Infinity" prefWidth="300.0" promptText="Password" unFocusColor="#4059a9">
            <VBox.margin>
                <Insets bottom="35.0" />
            </VBox.margin>
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
        </JFXPasswordField>
      <VBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="btnSignMeIn" alignment="CENTER" mnemonicParsing="false" onAction="#onLogin" text="Sign me in" textOverrun="CENTER_ELLIPSIS">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
             <JFXButton fx:id="btnGeenAccount" mnemonicParsing="false" onAction="#toRegisterView" text="Ik heb nog geen account">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
             </JFXButton>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
    </VBox>
